algoritmo "soma"
var
  numero1, numero2, soma:inteiro
inicio
  Escreval("------------------")
  Escreval("SOMA DE 2 NÚMEROS")
  Escreval("------------------")
  Escreva("Digite um número:")
  leia(numero1)
  Escreva("Digite outro número:")
  leia(numero2)
  soma <- numero1 + numero2
  Escreva("A soma dos valores digitados foi de:", soma)
fimalgoritmo